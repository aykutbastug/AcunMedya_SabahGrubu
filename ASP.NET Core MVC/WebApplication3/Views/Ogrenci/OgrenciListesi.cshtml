@model List<Ogrenci>
@{
    ViewData["Title"] = "Öğrenci Listesi";
}

<div class="container">
    <div class="row">
        <h1>Öğrenci Listesi</h1>
        <br />
        <div class="col-2">
            <a class="btn btn-primary" asp-controller="Ogrenci" asp-action="OgrenciEkle">Öğrenci Ekle</a>
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <td>No</td>
                    <td>Adı</td>
                    <td>Soyadı</td>
                    <td>Doğum Tarihi</td>
                    <td>Bölüm</td>
                    <td>Email</td>
                    <td width="130px"></td>
                </tr>
            </thead>
            <tbody>
                @foreach (Ogrenci item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Adi</td>
                        <td>@item.Soyadi</td>
                        <td>@item.DogumTarihi.ToShortDateString()</td>
                        <td>@item.Bolum</td>
                        <td>@item.Email</td>
                        <td>
                            <a asp-controller="Ogrenci" asp-action="OgrenciDuzenle" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                            <a asp-controller="Ogrenci" asp-action="OgrenciSil" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>